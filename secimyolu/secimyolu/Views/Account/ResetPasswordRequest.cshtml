        <div class="intro-text" style="padding-top: 100px !important;">
            <div class="page-group">
                <div class="page-group-top">
                    <h3>Şifremi Unuttum?</h3>
                </div>
                <script>
                    $(document).ready(function() {
                        $('.maxlength').remove();
                    });
                </script>
                <form method="POST" id="ResetPassword">
                    <div class="paper-input">
                        <input type="text" class="floating-label text-input" maxlength="50" autocomplete="off" name="Email" id="Email"/>
                        <label for="Email">Eposta<span id="validEmail" class="gfield_required"></span></label>
                    </div>
                    <br />
                    <a href="javascript:void(0);" onclick=" $('#ResetPassword').submit(); " class="btn btn-xl">Kaydet</a>
                    <div class="clearfix"></div>
                </form>
                <script type="text/javascript">
                    function checkEmailExist() {
                        var email = $('#Email').val();
                        var result = 'False';
                        $.ajax({
                            url: '@Url.Action("checkEmailExist", "Account")',
                            data: { Email: email },
                            type: 'get',
                            async: false,
                            success: function(data) {
                                result = data;
                            }
                        });
                        if (result == 'True')
                            return true;
                        else
                            return false;
                    }

                    var eposta = new LiveValidation('Email', { onlyOnSubmit: 'true', insertAfterWhatNode: 'validEmail', onValid: function() {} });
                    eposta.add(Validate.Presence, { failureMessage: 'Eposta giriniz!' });
                    eposta.add(Validate.Email, { failureMessage: 'Geçerli bir eposta giriniz!' });
                    eposta.add(Validate.Custom, { failureMessage: 'Girmiş olduğunuz eposta sistemde kayıtlı değildir!', against: checkEmailExist });

                </script>
            </div>
        </div>
    </div>
